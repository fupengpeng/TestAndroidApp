<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fupengpeng.housekeeper">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- 文件读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 殺死後臺進程 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <!-- 撥打電話權限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pm"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity android:name=".activity.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.HomeActivity"/>
        <activity android:name=".activity.TelManagerActivity"/>
        <activity android:name=".activity.TelManagerShowActivity"/>
        <activity android:name=".activity.SoftManagerActivity"/>
        <activity android:name=".activity.SoftManagerShowActivity"/>
        <activity android:name=".activity.FileManagerActivity"/>
        <activity android:name=".activity.FileManagerShowActivity"/>
        <activity android:name=".activity.SpeedUpActivity"/>
        <activity android:name=".activity.PhoneTestActivity"/>
        <activity android:name=".activity.ClearActivity"/>



    </application>

</manifest>