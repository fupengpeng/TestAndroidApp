<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiudianlianxian.memoryspace.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="15dp">

        <Button
            android:id="@+id/btn_activity_main_internal_storage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="点击获取手机内存大小" />

        <TextView
            android:id="@+id/tx_activity_main_internal_storage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:text="Hello World!" />

        <Button
            android:id="@+id/btn_activity_main_sd_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="点击获取手机内存大小" />

        <TextView
            android:id="@+id/tx_activity_main_sd_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:text="Hello World!" />

        <Button
            android:id="@+id/btn_activity_main_operation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="点击获取手机运行内存大小" />

        <TextView
            android:id="@+id/tx_activity_main_operation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:text="Hello World!" />

        <Button
            android:id="@+id/btn_activity_main_usable_operation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="点击获取手机可用运行内存大小" />

        <TextView
            android:id="@+id/tx_activity_main_usable_operation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:text="Hello World!" />

        <Button
            android:id="@+id/btn_activity_main_equipment_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="点击获取手机信息" />

        <TextView
            android:id="@+id/tx_activity_main_equipment_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hello World!" />

        <Button
            android:id="@+id/btn_activity_main_battery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="点击获取手机信息" />

    </LinearLayout>


</LinearLayout>
